# Server Configuration
PORT=3001
NODE_ENV=development

# Alpha Vantage API Key (Get free at https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Alpaca API Configuration (Paper Trading)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_PAPER=true

# Trading Configuration
INITIAL_CAPITAL=100000
MAX_POSITION_SIZE=0.1
RISK_PER_TRADE=0.02
USE_ALPACA=true
USE_ALPACA_MARKET_DATA=false  # Set to true to use Alpaca for historical data (requires paid plan), false for Yahoo Finance (free)

# Strategy Parameters
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
MA_SHORT_PERIOD=20
MA_LONG_PERIOD=50

# Screening Criteria
MIN_PRICE=5
MAX_PRICE=500
MIN_VOLUME=1000000
MIN_RSI=25
MAX_RSI=35

# Database
DATABASE_PATH=./data/trading.db

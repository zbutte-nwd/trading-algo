# Server Configuration
PORT=3001
NODE_ENV=development

# Alpha Vantage API (for historical data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Alpaca API Configuration (for real-time data and paper trading)
# Sign up at https://alpaca.markets to get your API keys
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_PAPER=true  # Set to true for paper trading, false for live trading

# Trading Configuration
INITIAL_CAPITAL=100000
MAX_POSITION_SIZE=0.1  # 10% of portfolio per position
RISK_PER_TRADE=0.02    # 2% risk per trade
USE_ALPACA=false       # Set to true to use Alpaca, false for simulation mode

# Strategy Parameters
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
MA_SHORT_PERIOD=20
MA_LONG_PERIOD=50

# Stock Screening Parameters
MIN_PRICE=5
MAX_PRICE=500
MIN_VOLUME=1000000
MIN_RSI=25
MAX_RSI=35
